<%= turbo_stream.append_all "[data-messages-id='#{@target}']".html_safe, 
  partial: "messages/message", locals: { message: @message, pane: @pane } 
%>
<% if @message.thread.present? %>
  <%= turbo_stream.replace_all "[data-message-id='#{@message.thread_id}']".html_safe,
    partial: "messages/message", locals: { message: @message.thread, pane: @pane } %>
<% end %>