<div class="flex flex-col h-full w-full">
  <div class="flex flex-row gap-5 h-full w-full">
    <div class="w-11/12 flex flex-col gap-3 border-x-2 justify-end">
      <%= render @messages %>
      <%= turbo_stream_from "chat" %>
      <div id="messages"></div>
    </div>
    <div class="w-1/12 flex flex-col">
      <%= render @users %>
      <%= turbo_stream_from "users" %>
      <div id="users"></div>
  </div>
  </div>
  <div class="w-full">
    <%= form_with(model: @message, remote: true, class: "w-full flex flex-row", data: { controller: 'chat-input', action: 'turbo:submit-end->chat-input#reset' }) do |f| %>
      <%= f.text_field :content, autocomplete: 'off', class: "w-11/12 border-2" %>
      <%= f.submit "Send", data: { disable_with: false }, class: "w-1/12 bg-blue-400 rounded" %>
    <% end %>
  </div>
</div>