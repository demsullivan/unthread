<%= link_to pane_tab_path(pane, id: tab['id'], active: true), data: { 'turbo-method': :patch } do %>
  <div class="px-3 py-1 <%= classes %> flex flex-row gap-2 items-center">
    <div class="grow"><%= tab['name'] %></div>
    <div class="text-xl">
      <% if tab['closeable'] %>
        <%= link_to pane_tab_path(pane, id: tab['id']), data: { 'turbo-method': :delete } do %>
          &times;
        <% end %>
      <% end %> 
    </div>
  </div>
<% end %>